@model Category 
@using System.Globalization 
@{
    ViewBag.Title = Model.CategoryName;
    string FormatCurrency(double number)
    {
        CultureInfo cul = CultureInfo.GetCultureInfo("vi-VN");
        return double.Parse("12345").ToString("#,###", cul.NumberFormat);
    }
}

<div class="row">
    <div class="w-100 mb-2">
        <div class="float-right">
            <a class="btn btn-success" asp-controller="Book" asp-action="Create">
                <i class="fas fa-plus">
                </i>
                Create
            </a>
            <a class="btn btn-secondary" asp-controller="Category" asp-action="Index">
                <i class="fas fa-backward">
                </i>
                Back
            </a>
        </div>
    </div>

    <table class="table table-bordered table-hover table-striped table-responsive-sm">
        <thead class="thead-dark">
            <tr>
                <th style="width: 5%">
                    #
                </th>
                <th style="width: 25%">
                    Book Name
                </th>
                <th style="width: 25%" class="text-center">
                    Authors
                </th>
                <th style="width: 10%" class="text-center">
                    Photo
                </th>
                <th style="width: 10%" class="text-center">
                    Price (vnd)
                </th>
                <th style="width: 10%" class="text-center">
                    Status
                </th>
                <th style="width: 25%">
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (Book book in Model.Books)
            {
            <tr>
                <td>@book.BookId.</td>
                <td>@book.BookName</td>
                <td>@book.Authors</td>
                <td class="text-center">
                    <img class="img-fluid img-thumbnail img-lg" src=@Url.Content(book.Photo) alt="@book.BookName" />
                </td>
                <td class="text-right">
                    @FormatCurrency((double)book.Price)
                </td>
                <td class="project-state text-center">
                    @if (book.IsDeleted)
                    {
                        <span class="badge badge-danger">removed</span>
                    }
                    else
                    {
                        <span class="badge badge-success">Success</span>
                    }
                </td>
                <td class="project-actions text-right">
                    <a class="btn btn-primary btn-sm" href="#">
                        <i class="fas fa-folder">
                        </i>
                        View
                    </a>
                    <a class="btn btn-info btn-sm" href="#">
                        <i class="fas fa-pencil-alt">
                        </i>
                        Edit
                    </a>
                    <a class="btn btn-danger btn-sm" href="#">
                        <i class="fas fa-trash">
                        </i>
                        Delete
                    </a>
                </td>
            </tr>
            }

        </tbody>
    </table>
</div>